local function updateRarityLabel(r)
    rarityLabel.Text = "üîé Rarity: " .. (r or "None")
end

local function updateClickerStatusLabel()
    if fastClicking then
        local mode = "‚ö° Fast"
        if autoSecure then mode = mode .. " (Stable)" end
        clickerStatusLabel.Text = "üñ±Ô∏è Clicker: " .. mode
    elseif normalClicking then
        clickerStatusLabel.Text = "üñ±Ô∏è Clicker: üïê Normal"
    else
        clickerStatusLabel.Text = "üñ±Ô∏è Clicker: Off"
    end
end

local function updateSecureStatusLabel()
    secureStatusLabel.Text = "üõ°Ô∏è Auto Secure: " .. (autoSecure and "üü¢ On" or "‚ö™ Off")
end

task.spawn(function()
    while task.wait(0.5) do
        updateClickerStatusLabel()
    end
end)

updateClickerStatusLabel()
updateSecureStatusLabel()

