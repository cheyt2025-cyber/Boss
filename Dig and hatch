createButton(tabContents["Teleport"], "üè† Return Safe", returnToSafe)

-- MAIN LOOP
RunService.Heartbeat:Connect(function()
    if not DigLostEvent then return end
    if not (fastClicking or normalClicking or autoSecure) then return end

    local char = player.Character
    if not char then return end
    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local eggs = Workspace:FindFirstChild("Eggs")
    if not eggs then return end

    local myPos = hrp.Position
    local forward = hrp.CFrame.LookVector
    local nearestEgg, nearestRarity, nearestDist = nil, nil, MAX_DISTANCE + 1

    for _, egg in ipairs(eggs:GetChildren()) do
        local owner = egg:FindFirstChild("Owner") or egg:FindFirstChild("Player") or egg:FindFirstChild("PlayerName")
        if owner and tostring(owner.Value) ~= player.Name then continue end

        local rarity = getEggRarity(egg)
        if rarity then
            local hb = egg:FindFirstChild("Hitbox")
            if hb and hb:IsA("BasePart") then
                local dist = (hb.Position - myPos).Magnitude
                local dir = (hb.Position - myPos).Unit
                if dist <= MAX_DISTANCE and dir:Dot(forward) >= FRONT_CONE and dist < nearestDist then
                    nearestEgg, nearestRarity, nearestDist = egg, rarity, dist
                end
            end
        end
    end

    updateRarityLabel(nearestRarity)

    if nearestEgg and nearestRarity then
        local id = nearestEgg:GetDebugId()
        local keep = secureRarities[nearestRarity]

        if autoSecure and keep then
            if not securingEggs[id] then
                securingEggs[id] = true
                secureInfoLabel.Text = "üìä Status: ‚úÖ Protected (" .. nearestRarity .. ")"
                task.delay(SECURE_LOCK, function() securingEggs[id] = nil end)
            else
                secureInfoLabel.Text = "üìä Status: ‚úÖ Protected (" .. nearestRarity .. ")"
            end
        end

        if autoSecure and not keep then
            if not skippedEggs[id] and not securingEggs[id] and (tick() - lastSkipTime) >= SKIP_COOLDOWN then
                skippedEggs[id] = true
                lastSkipTime = tick()
                pcall(function() DigLostEvent:FireServer() end)
                secureInfoLabel.Text = "üìä Status: ‚ùå Skipped (" .. nearestRarity .. ")"
            end
        end
    end

    if hasShovelEquipped() then
        if fastClicking then
        if autoSecure then safeClick(CLICK_FAST_SAFE) else safeClick(CLICK_FAST) end
        elseif normalClicking then
            safeClick(CLICK_NORMAL)
        end
    end
end)

task.spawn(function()
    while task.wait(3) do
        skippedEggs = {}
    end
end)

-- ================== BOOTING SEQUENCE ==================
local rollingZ = Instance.new("TextLabel")
rollingZ.Size = UDim2.new(0, 200, 0, 200)
rollingZ.Position = UDim2.new(0.5, -100, 0.5, -100)
rollingZ.BackgroundTransparency = 1
rollingZ.Text = "Z"
rollingZ.TextColor3 = ACCENT_COLOR
rollingZ.Font = Enum.Font.GothamBlack
rollingZ.TextSize = 180
rollingZ.Rotation = 0
rollingZ.ZIndex = 101
rollingZ.Parent = screenGui

local zStroke = Instance.new("UIStroke")
zStroke.Color = Color3.fromRGB(255, 255, 255)
zStroke.Transparency = 0.5
zStroke.Thickness = 3
zStroke.Parent = rollingZ

-- Roll like wheel: spin multiple rotations
local spinTween = TweenService:Create(rollingZ, TweenInfo.new(3, Enum.EasingStyle.Linear), {Rotation = 1080}) -- 3 full rotations
spinTween:Play()

-- Bit by bit reveal main GUI after booting ends
mainFrame.Position = centerPos
mainFrame.Visible = true
mainFrame.Size = UDim2.new(0, 0, 0, 0)
mainFrame.BackgroundTransparency = 1

spinTween.Completed:Connect(function()
    -- Fade out rolling Z
    TweenService:Create(rollingZ, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {TextTransparency = 1}):Play()
    task.wait(0.5)
    rollingZ:Destroy()

    -- Now reveal GUI bit by bit after booting
    TweenService:Create(mainFrame, TweenInfo.new(0.5), {BackgroundTransparency = 0.5}):Play()

    task.wait(0.5)
    TweenService:Create(mainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Back), {Size = UDim2.new(0, 250, 0, 190)}):Play()  -- Half size
    TweenService:Create(mainFrame, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()

    task.wait(0.8)
    TweenService:Create(mainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Back), {Size = normalSize}):Play()  -- Full size

    showNotification("Welcome to ZAPORIUM.")
    showNotification("Dig and Hatch a Brainrot - Auto Farm Loaded! Sub 2 ScriptZap", 7)
end)

print("ZAPORIUM UI LOADED.")
